<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:layout_marginHorizontal="@dimen/dimen_20"
    android:layout_marginVertical="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/rounded_corners_background_white"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_big"
    android:weightSum="2">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/comboNameTv"
        style="@style/TextViewStyle.Black.Size_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_weight="1"
        android:alpha="0.5"
        android:gravity="start"
        tools:text="@tools:sample/lorem/random" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/comboCodeTv"
        style="@style/TextViewStyle.Green.Size_17"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
        tools:text="@tools:sample/lorem" />

</LinearLayout>
