<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scanning_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/scanSourceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_marginTop="@dimen/dimen_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scanInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scanSourceContainer"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/scanQtyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/scanQtyTvContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@drawable/rounded_corners_background_white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/padding_big"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/qtyMinusBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_big"
                            android:src="@drawable/ic_minus" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/scanQtyTv"
                            android:textSize="@dimen/_12ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_20"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:background="@drawable/rounded_corners_background"
                            android:paddingHorizontal="@dimen/margin_big"
                            android:paddingVertical="@dimen/padding_big"
                            tools:text="3" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/qtyPlusBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_big"
                            android:src="@drawable/ic_plus" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemNameContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@drawable/rounded_corners_background_white"
                    android:divider="@drawable/divider"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/fUnitContainer"
                    app:layout_constraintStart_toStartOf="@id/scanQtyContainer"
                    app:layout_constraintTop_toBottomOf="@id/scanQtyContainer">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/captionTv"
                        style="@style/TextViewStyle.Black.Size_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="@tools:sample/lorem" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fUnitContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@drawable/rounded_corners_background_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/scanQtyContainer"
                    app:layout_constraintStart_toEndOf="@id/itemNameContainer"
                    app:layout_constraintTop_toBottomOf="@id/scanQtyContainer">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fUnitTv"
                        style="@style/TextViewStyle.Black.Size_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="ssdf" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/docTypeFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:minHeight="@dimen/_300sdp"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scanInfoContainer" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>