<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_background_white"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dimen_20"
    android:paddingVertical="@dimen/_4sdp"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/textItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        android:visibility="gone"
        android:weightSum="2"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textNameTv"
            style="@style/TextViewStyle.Black.Size_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textValueTv"
            style="@style/TextViewStyle.Green.Size_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@tools:sample/lorem" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkboxItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/padding_normal"
        android:weightSum="2"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/checkboxNameTv"
            style="@style/TextViewStyle.Black.Size_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@tools:sample/lorem" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkboxValueTv"
            style="@style/TextViewStyle.Black.Size_13"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:drawablePadding="0dp"
            android:layout_weight="1"
            android:clickable="false" />

    </LinearLayout>
</LinearLayout>